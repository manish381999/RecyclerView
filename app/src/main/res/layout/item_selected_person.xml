<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/bag_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:text="Name:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/selectedNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginStart="-8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Mobile No:"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/selectedNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/selectedMobileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginStart="-8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/selectedNameTextView"
            app:layout_constraintStart_toEndOf="@id/tv2"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Gender:"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/selectedMobileTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/selectedGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginStart="-8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/selectedMobileTextView"
            app:layout_constraintStart_toEndOf="@id/tv3"
            android:textColor="@color/black"/>


        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>